{
  "name": "trend4media-functions",
  "description": "Firebase Cloud Functions for T4M Billing System",
  "version": "1.0.0",
  "scripts": {
    "build": "echo 'No build needed - using JS directly'",
    "build:watch": "echo 'No build needed - using JS directly'",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint *.js --fix",
    "seed": "node seed-firestore-data.js",
    "seed:t4m": "node seed-t4m-billing.js",
    "setup:firebase": "firebase init firestore && firebase init functions && firebase init hosting",
    "deploy:all": "firebase deploy",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes"
  },
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.4.0",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.17",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^9.18.0",
    "firebase-functions-test": "^3.3.0",
    "jest": "^29.7.0"
  },
  "private": true
}
